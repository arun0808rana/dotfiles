;;;;;
; Polybar Config
;;;;;

[colors]
nord0 = #2E3440
nord1 = #3B4252
nord2 = #434C5E
nord3 = #4C566A
nord4 = #D8DEE9
nord5 = #E5E9F0
nord6 = #ECEFF4
nord7 = #8FBCBB
nord8 = #88C0D0
nord9 = #81A1C1
nord10 = #5E81AC
nord11 = #BF616A
nord12 = #D08770
nord13 = #EBCB8B
nord14 = #A3BE8C
nord15 = #B48EAD


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = CHRG <label-charging>
format-discharging = BATT <label-discharging>
format-full= BATT <label-full>

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.nord3}
label-focused-underline= ${colors.nord4}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.nord11}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.nord4}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.nord4}

label-focused = %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/cpu]
type = internal/cpu
interval = 1.0
label = "CPU %percentage%%"

[module/date]
type = internal/date
interval = 1.0
date = "%A, %m/%d/%y"
time = "%r (%Z)"
label = "%date% - %time%"

[module/memory]
type = internal/memory
interval = 1.0
label = RAM %percentage_used%% 

[module/volume]
type = internal/volume
format-volume = VOL <label-volume>
label-muted = MUTED %percentage%%

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = WLAN <label-connected>
label-connected = %essid%
format-disconnected =

[bar/dock]
monitor = ${env:MONITOR:}
locale = en_US.UTF-8
font-0 = "Source Code Pro:size=9:weight=Regular"

background = ${colors.nord0}
foreground = ${colors.nord4}

width = 100%
height = 27
radius = 0.0
fixed-center = true
bottom = false

padding-right = 1
separator = " | "

modules-left = i3
modules-center = date
modules-right = volume cpu memory wlan battery

[settings]
screenchange-reload = true
